{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ES2020",
      "dom"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "strict": false,
    "allowJs": true,
    "declaration": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "pages/**/*",
    "queries/**/*",
    "components/**/*",
    "utils/**/*",
    "theme.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
